@{
    Layout = "~/Views/Shared/_Layout2.cshtml";

    ViewBag.Title = "View Trainers";
}
<section class="trainers-section mt-5">
    <div class="container">
        
        <div class="row">
            @foreach (var trainer in ViewBag.Trainers as IEnumerable<Fitness_Center.Models.Trainer>)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="trainer-box text-center">
                        @* <img src="@trainer.ProfilePicture" alt="@trainer.FullName" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;"> *@
                        <img src="@Url.Content("~/Images/" + trainer.ProfilePicture)"
                             asp-append-version="true"
                             class="rounded-circle"
                             width="75" height="75" />
                        <h4>@trainer.FullName</h4>
                        <p><strong>Specialization:</strong> @trainer.Specialization</p>
                        <p><strong>Experience:</strong> @trainer.ExperienceYears years</p>
                        <p><strong>Contact:</strong> @trainer.ContactNumber</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
