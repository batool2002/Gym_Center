<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Fitness Center Members</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            color: #6c757d; /* Medium Grey */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .footer, .navbar {
            background-color: #343a40;
            color: white;
        }

        .footer {
            margin-top: auto;
        }

            .footer a, .navbar a {
                color: #adb5bd;
                text-decoration: none;
            }

                .footer a:hover, .navbar a:hover {
                    color: white;
                }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Members")">Fitness Center Members</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewProfile", "Members")">View Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewPlans", "Members")">View Plans</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewWorkouts", "Members")">View Workouts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("SubmitTestimonial", "Members")">Submit Testimonial</a>
                    </li>
          
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "LoginAndRegistration")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p>&copy; 2025 Fitness Center Members Panel. All rights reserved.</p>
            <a href="@Url.Action("Index", "Members")">Dashboard</a> |
            <a href="@Url.Action("Subscribe", "Members")">Subscribe</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
