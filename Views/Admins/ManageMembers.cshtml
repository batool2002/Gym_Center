@model IEnumerable<Fitness_Center.Models.Member>

@{
    ViewData["Title"] = "Members";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Members</h1>

    <!-- Create New Button -->
    <div class="mb-4 text-end">
        <a asp-action="CreateMember" class="btn btn-secondary">
            <i class="bi bi-person-plus-fill"></i> Create New Member
        </a>
    </div>

    <!-- Members Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Date of Birth</th>
                    <th>Contact Number</th>
                    <th>Address</th>
                    <th>Profile Picture</th>
                    <th>Subscription ID</th>
                    <th>User ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>
                            <img src="@Url.Content("~/Images/" + item.ProfilePicture)"
                                 asp-append-version="true"
                                 class="rounded-circle"
                                 width="75" height="75" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Subscription.SubscriptionId)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.UserId)</td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <a asp-action="EditMember" asp-route-id="@item.MemberId" class="btn btn-secondary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="DeleteMember" asp-route-id="@item.MemberId" class="btn btn-secondary">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
