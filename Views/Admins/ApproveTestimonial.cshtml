@model Fitness_Center.Models.Testimonial

@{
    ViewData["Title"] = "Testimonial Approval";
}

@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<h1>Testimonial Approval</h1>

<h4>Testimonial</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="ApproveTestimonial">
            <div class="form-group">
                <label>Member Name</label>
                <input class="form-control" value="@Model.Member.FullName" readonly />
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea class="form-control" rows="5" readonly>@Model.Content</textarea>
            </div>
            <div class="form-group">
                <label>Status</label>
                <input class="form-control" value="@Model.Status" readonly />
            </div>

            <div class="form-group">
                <input type="hidden" name="id" value="@Model.TestimonialId" />
                <button type="submit" class="btn btn-success">Approve</button>
            </div>
        </form>

        <form asp-action="RejectTestimonial">
            <div class="form-group">
                <input type="hidden" name="id" value="@Model.TestimonialId" />
                <button type="submit" class="btn btn-danger">Reject</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageTestimonials" class="btn btn-primary">Back to List</a>
</div>
